const towerControl = {
    run: (tower) => {
        if(tower) {
            let hostile = tower.pos.findClosestByRange(FIND_HOSTILE_CREEPS)
            if (hostile) {
                tower.attack(hostile)
            } else {
                let damagedStructures = tower.room.find(FIND_STRUCTURES, {
                    filter: structure => (structure.hits < 5000) && structure.structureType !== STRUCTURE_WALL
                })
                damagedStructures.sort((a,b) => a.hits - b.hits)
                if (damagedStructures) {
                    damagedStructures.sort((a,b) => a.hits - b.hits)
                    tower.repair(damagedStructures[0])
                }
            }
        }
    }    
}
    
module.exports = towerControl;
